#version=RHEL8
# Use graphical install
graphical

repo --name="AppStream" --baseurl=http://{{ SERVER_IP }}/{{ MENU_DISTRO }}/AppStream

%packages
@^minimal-environment
aide
audit
fapolicyd
firewalld
opensc
openscap
openscap-scanner
openssh-server
openssl-pkcs11
policycoreutils
rng-tools
rsyslog
rsyslog-gnutls
scap-security-guide
tmux
usbguard
-abrt
-abrt-addon-ccpp
-abrt-addon-kerneloops
-abrt-addon-python
-abrt-cli
-abrt-plugin-logger
-abrt-plugin-rhtsupport
-abrt-plugin-sosreport
-iprutils
-krb5-workstation
-rsh-server
-sendmail
-telnet-server
-tftp-server
-tuned
-vsftpd
-xorg-x11-server-Xorg
-xorg-x11-server-Xwayland
-xorg-x11-server-common
-xorg-x11-server-utils

%end

# Keyboard layouts
keyboard --xlayouts='us'
# System language
lang en_US.UTF-8

# Network information
network --device=ens192 --hostname=IPA --bootproto=static --ip=10.0.0.32 --netmask=255.255.255.192 --gateway=10.0.0.1 --nameserver=10.0.0.1


# Use network installation
url --url="http://{{ SERVER_IP }}/{{ MENU_DISTRO }}/"

# Run the Setup Agent on first boot
firstboot --enable

ignoredisk --only-use=sda
# Partition clearing information
clearpart --none --initlabel
# Disk partitioning information
part /boot --fstype="xfs" --ondisk=sda --size=1024
part /boot/efi --fstype="efi" --ondisk=sda --size=1024 --fsoptions="umask=0077,shortname=winnt"
part pv.797 --fstype="lvmpv" --ondisk=sda --size=79870
volgroup rhel_ipa --pesize=4096 pv.797
logvol swap --fstype="swap" --size=2048 --name=swap --vgname=rhel_ipa
logvol / --fstype="xfs" --size=29696 --name=root --vgname=rhel_ipa
logvol /var/log --fstype="xfs" --size=10240 --name=var_log --vgname=rhel_ipa
logvol /var --fstype="xfs" --size=10240 --name=var --vgname=rhel_ipa
logvol /var/log/audit --fstype="xfs" --size=10240 --name=var_log_audit --vgname=rhel_ipa
logvol /var/tmp --fstype="xfs" --size=2048 --name=var_tmp --vgname=rhel_ipa
logvol /home --fstype="xfs" --size=5116 --name=home --vgname=rhel_ipa
logvol /tmp --fstype="xfs" --size=10240 --name=tmp --vgname=rhel_ipa

# System timezone
timezone America/Chicago --isUtc

